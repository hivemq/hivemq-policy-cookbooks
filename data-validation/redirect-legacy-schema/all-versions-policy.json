{
  "id": "all-device-statuses",
  "matching": {
    "topicFilter": "devices/+/+/status"
  },
  "validation": {
    "validators": [
      {
        "type": "schema",
        "arguments": {
          "strategy": "ANY_OF",
          "schemas": [
            {
              "schemaId": "v1-status-schema"
            },
            {
              "schemaId": "v2-status-schema"
            }
          ]
        }
      }
    ]
  },
  "onFailure": {
    "pipeline": [
      {
        "id": "logFailure",
        "functionId": "System.log",
        "arguments": {
          "level": "WARN",
          "message": "The client ${clientId} sent invalid status data to ${topic}"
        }
      }
    ]
  }
}
