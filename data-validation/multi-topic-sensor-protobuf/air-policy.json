{
  "id": "air-policy",
  "matching": {
    "topicFilter": "air/#"
  },
  "validation": {
    "validators": [
      {
        "type": "schema",
        "arguments": {
          "strategy": "ALL_OF",
          "schemas": [
            {
              "schemaId": "air-schema",
              "version": "latest"
            }
          ]
        }
      }
    ]
  },
  "onFailure": {
    "pipeline": [
      {
        "id": "logFailure",
        "functionId": "System.log",
        "arguments": {
          "level": "ERROR",
          "message": "The client with ID ${clientId} sent invalid air data: ${validationResult}"
        }
      }
    ]
  }
}
