{
  "id": "temperature-policy",
  "matching": {
    "topicFilter": "temperature/#"
  },
  "validation": {
    "validators": [
      {
        "type": "schema",
        "arguments": {
          "strategy": "ALL_OF",
          "schemas": [
            {
              "schemaId": "temperature-schema"
            }
          ]
        }
      }
    ]
  },
  "onFailure": {
    "pipeline": [
      {
        "id": "logFailure",
        "functionId": "log",
        "arguments": {
          "level": "ERROR",
          "message": "The client with ID ${clientId} sent invalid temperature data: ${validationResult}"
        }
      }
    ]
  }
}