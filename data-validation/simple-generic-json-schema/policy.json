{
  "name": "simple-basic-json-policy-for-every-topic",
  "matching": {
    "topicFilter": "#"
  },
  "validation": {
    "schemaId": "simple-generic-json"
  },
  "onSuccess": {
    "continue": true
  },
  "onFailure": {
    "continue": false,
    "log": {
      "level": "WARN",
      "message": "The client with $clientId does no send JSON payloads. The message will be dropped."
    }
  }
}