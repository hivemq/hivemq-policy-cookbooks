{
  "id": "simple-basic-json-policy-for-every-topic",
  "matching": {
    "topicFilter": "#"
  },
  "validation": {
    "validators": [
      {
        "type": "schema",
        "arguments": {
          "strategy": "ALL_OF",
          "schemas": [
            {
              "schemaId": "simple-generic-json",
              "version": "latest"
            }
          ]
        }
      }
    ]
  },
  "onSuccess": {
    "pipeline": [
      {
        "id": "flagSchemaChecked",
        "functionId": "UserProperties.add",
        "arguments": {
          "name": "policy",
          "value": "success"
        }
      }
    ]
  },
  "onFailure": {
    "pipeline": [
      {
        "id": "logFailure",
        "functionId": "System.log",
        "arguments": {
          "level": "WARN",
          "message": "The client ${clientId} does not send JSON payloads. The message will be dropped."
        }
      },
      {
        "id": "flagSchemaChecked",
        "functionId": "UserProperties.add",
        "arguments": {
          "name": "policy",
          "value": "failed"
        }
      }
    ]
  }
}
